<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/themeCouleur"
        android:text="@string/nomApp"
        android:textColor="@color/titreColor"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/app_name"
        app:titleTextColor="@color/titreColor"
        />
    <ListView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/tool"/>

    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton-->
    <Button
        android:id="@+id/ajouticone"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:onClick="ajoutNote"
        android:text="+"
        android:textSize="35dp"
        app:backgroundTint="@color/titreColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>